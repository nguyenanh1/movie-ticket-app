<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_white"
    android:gravity="center"
    android:layout_height="?android:attr/actionBarSize">
    <ImageButton
        android:layout_marginRight="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_15"
        android:id="@+id/image_button_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_back"
        android:background="@drawable/background_button_back"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/avatar_default"
        android:layout_marginRight="@dimen/dp_10"/>
    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
        tools:text="Name"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/color_title_menu"
        android:id="@+id/text_name_activity"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/layout_title_main"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="match_parent">
        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/color_title_menu"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cultureplex"/>
        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/color_red_main"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="VENUS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center">
        <ImageButton
            android:id="@+id/button_menu_navigation"
            android:background="@color/color_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/icon_menu" />
    </LinearLayout>
</LinearLayout>