<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context=".presentation.ui.activities.PayActivity">
    <include layout="@layout/layout_toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/color_white"
            android:id="@+id/layout_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <ImageView
                android:id="@+id/image_movie"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="@dimen/dp_200" />
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_name_movie"
                        android:textSize="@dimen/text_size_18sp"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="LẬT MẶT: NHÀ CÓ KHÁCH"/>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_8sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="#F51414"
                        android:background="@drawable/drawable_c_red"
                        tools:text="C18"/>
                </LinearLayout>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_old_contain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="C16 - Không danh cho khán giả dưới 16 tuổi"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="#EB5454"/>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="T5 18 tháng 4, 2019"
                    android:textColor="@color/color_black"/>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="23:00"
                    android:textColor="@color/color_black"/>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_room_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="Phòng 01"
                    android:textColor="@color/color_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:text="TỔNG CỘNG: "/>
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:id="@+id/text_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:textSize="@dimen/text_size_16sp"
                            tools:text="400.000 đ"
                            />
                    </LinearLayout>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomButton
                        android:id="@+id/button_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_16sp"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:background="@drawable/background_button_booking"
                        android:text="@string/pay"/>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_ticket"
            android:layout_below="@+id/layout_movie"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#59000000"
            android:padding="@dimen/dp_5"
            android:orientation="vertical">
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tong_so_ve"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/color_white"
                android:layout_gravity="center"/>
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:id="@+id/text_num_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/color_white"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>