<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context=".presentation.ui.activities.MovieDetailActivity">
    <include layout="@layout/layout_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <WebView
                        android:id="@+id/web_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </WebView>
                    <RelativeLayout
                        android:id="@+id/layout_youtube"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_transparent">
                    </RelativeLayout>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:background="@color/color_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/dp_5"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_movie_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="SHAZAM!"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold"/>

                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomButton
                        android:id="@+id/button_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/background_button_booking"
                        android:text="@string/dat_ve"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:visibility="visible"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_contain"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_title_register"
                    tools:text="Ná»™i dung phim"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:textSize="@dimen/text_size_14sp"
                    android:gravity="start"
                    tools:targetApi="o" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:weightSum="10">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/color_text_title_register"
                        android:layout_height="wrap_content"
                        android:text="@string/kiem_duyet"/>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:padding="@dimen/dp_5"
                        android:id="@+id/text_old"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_text_title_register"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:weightSum="10">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:textColor="@color/color_text_title_register"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_height="wrap_content"
                        android:text="@string/khoi_chieu"/>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_time_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_text_title_register"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:weightSum="10">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_title_register"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_height="wrap_content"
                        android:text="@string/the_loai"/>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_cate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textSize="@dimen/text_size_14sp"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_text_title_register"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:weightSum="10">

                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:textColor="@color/color_text_title_register"
                        android:text="@string/director"
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold" />
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_director"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textSize="@dimen/text_size_14sp"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_text_title_register"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:weightSum="10">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/color_text_title_register"
                        android:layout_height="wrap_content"
                        android:text="@string/actor"/>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_actor"
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_text_title_register"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:weightSum="10">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/color_text_title_register"
                        android:layout_height="wrap_content"
                        android:text="@string/duration"/>
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_text_title_register"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>