<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/bg_ticket"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_height="wrap_content">
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phòng"/>
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:id="@+id/text_id_phong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginLeft="@dimen/dp_10"
                tools:text="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vị trí"/>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_position"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    tools:text="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_black"
                    android:text="Hàng"/>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_row"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_black"
                    tools:text="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_black"
                    android:layout_height="wrap_content"
                    android:text="Cột"/>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_col"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_black"
                    android:layout_height="wrap_content"
                    tools:text="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_height="wrap_content">
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã vé"/>
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:id="@+id/text_id_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginLeft="@dimen/dp_10"
                tools:text="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_height="wrap_content">
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá tiền:"/>
            <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_red"
                android:textSize="@dimen/text_size_20sp"
                android:layout_marginLeft="@dimen/dp_10"
                tools:text="50.000 VND"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>