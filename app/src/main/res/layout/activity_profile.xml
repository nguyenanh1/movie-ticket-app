<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".presentation.ui.activities.ProfileActivity">
    <include layout="@layout/layout_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/drawable_border_avatar"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:gravity="center"
                        android:layout_centerInParent="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_avatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/avatar_default_70px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:background="@drawable/background_member"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5">
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:id="@+id/text_account_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MEMBER"/>
                    </LinearLayout>
                </RelativeLayout>
                <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                    android:id="@+id/text_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Ánh Nguyễn"
                    android:textAlignment="center"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_16sp"
                    android:padding="@dimen/dp_5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:text="Mã thành viên:"
                        android:textColor="#FF3D98"
                        android:gravity="end" />
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:id="@+id/text_id_account"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:paddingLeft="@dimen/dp_20"
                        tools:text="122222233333333"
                        android:textColor="#303030"
                        android:textSize="@dimen/text_size_20sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Tổng chi tiêu"
                            android:textColor="@color/color_text_title_register"
                            android:textSize="@dimen/text_size_14sp" />
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:id="@+id/text_balance"
                            tools:text="0 đ"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_20sp"
                            android:textColor="@color/color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:text="Điểm thưởng"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_14sp"
                            android:textColor="@color/color_text_title_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:id="@+id/text_point"
                            tools:text="0"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_20sp"
                            android:textColor="@color/color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/layout_information"
                        android:padding="5dp"
                        android:background="@drawable/drawable_button_white_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/card"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:src="@drawable/icon_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:layout_toRightOf="@+id/card"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/infomation_account"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_arrow_left"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_password"
                        android:padding="5dp"
                        android:background="@drawable/drawable_button_white_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/lock"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:src="@drawable/icon_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                            android:layout_toRightOf="@+id/lock"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change_password"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_arrow_left"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_history_transaction"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:paddingVertical="@dimen/dp_10"
                    android:background="@drawable/drawable_button_white_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_transaction"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_arrow_left"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_movie_saw"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:paddingVertical="@dimen/dp_10"
                    android:background="@drawable/drawable_button_white_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phim đã xem"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_arrow_left"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/color_white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_logout"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:paddingVertical="@dimen/dp_10"
                    android:background="@drawable/drawable_button_white_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dang_xuat"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_arrow_left"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>