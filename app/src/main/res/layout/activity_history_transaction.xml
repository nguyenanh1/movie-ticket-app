<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context=".presentation.ui.activities.HistoryTransactionActivity">
    <include layout="@layout/layout_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_transaction"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <vn.anhnguyen.ticketmovie.presentation.ui.custom.CustomTextView
            android:id="@+id/text_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không tìm thấy lịch sử giao dịch"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/color_black"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>